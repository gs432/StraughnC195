<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #59757a;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.UpdateCustController">
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#57737800" height="347.0" layoutX="84.0" layoutY="27.0"
               stroke="#eeeeee" strokeType="INSIDE" width="432.0"/>
    <Label layoutX="181.0" layoutY="29.0" text="Edit Customer" textAlignment="CENTER" textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI Bold" size="36.0"/>
        </font>
    </Label>
    <TextField fx:id="editCustId" editable="false" layoutX="243.0" layoutY="91.0" opacity="0.63" prefHeight="25.0"
               prefWidth="216.0"/>
    <TextField fx:id="editCustName" layoutX="243.0" layoutY="122.0" prefHeight="25.0" prefWidth="216.0"/>
    <TextField fx:id="editCustAddress" layoutX="243.0" layoutY="154.0" prefHeight="25.0" prefWidth="216.0"/>
    <TextField fx:id="editCustPostal" layoutX="243.0" layoutY="252.0" prefHeight="25.0" prefWidth="216.0"/>
    <TextField fx:id="editCustPhone" layoutX="243.0" layoutY="285.0" prefHeight="25.0" prefWidth="216.0"/>
    <ComboBox fx:id="editCustCountry" layoutX="243.0" layoutY="186.0" onAction="#onCountryChoice" prefHeight="25.0"
              prefWidth="216.0"/>
    <ComboBox fx:id="editCustState" layoutX="243.0" layoutY="219.0" prefHeight="25.0" prefWidth="216.0"/>
    <Label layoutX="142.0" layoutY="125.0" text="Name" textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI" size="14.0"/>
        </font>
    </Label>
    <Label layoutX="142.0" layoutY="157.0" text="Address" textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI" size="14.0"/>
        </font>
    </Label>
    <Label layoutX="142.0" layoutY="189.0" text="Country" textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI" size="14.0"/>
        </font>
    </Label>
    <Label layoutX="142.0" layoutY="222.0" text="State/Province  " textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI" size="14.0"/>
        </font>
    </Label>
    <Label layoutX="142.0" layoutY="255.0" text="Postal Code" textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI" size="14.0"/>
        </font>
    </Label>
    <Label layoutX="142.0" layoutY="288.0" text="Phone" textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI" size="14.0"/>
        </font>
    </Label>
    <Label layoutX="142.0" layoutY="94.0" text="ID" textFill="#eeeeee">
        <font>
            <Font name="Leelawadee UI" size="14.0"/>
        </font>
    </Label>
    <Button fx:id="editCustSave" layoutX="243.0" layoutY="328.0" mnemonicParsing="false" onAction="#onEditCustSaveClick"
            prefHeight="27.0" prefWidth="81.0" text="Save"/>
    <Button fx:id="editCustCancel" layoutX="378.0" layoutY="328.0" mnemonicParsing="false"
            onAction="#onEditCustCancelClick" prefHeight="27.0" prefWidth="81.0" text="Cancel"/>
</AnchorPane>
